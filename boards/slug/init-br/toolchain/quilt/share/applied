# Read in library functions
if [ "$(type -t patch_file_name)" != function ]
then
	if ! [ -r $CMDPATH/scripts/patchfns ]
	then
		echo "Cannot read library $CMDPATH/scripts/patchfns" >&2
		exit 1
	fi
	. $CMDPATH/scripts/patchfns
fi

usage()
{
	printf $"Usage: quilt applied [patch]\n"
	if [ x$1 = x-h ]
	then
		printf $"
Print a list of applied patches, or all patches up to and including the
specified patch in the file series.
"
		exit 0
	else
		exit 1
	fi
}

options=`getopt -o nh -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

while true
do
	case "$1" in
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -gt 1 ]
then
	usage
elif [ $# -eq 1 ]
then
	if ! patch=$(find_patch $1)
	then
		printf $"Patch %s is not in series\n" "$1" >&2
		exit 1
	fi
	if ! is_applied "$patch"
	then
		printf $"Patch is not applied\n" "$(print_patch $patch)" >&2
		exit 1
	fi
else
	patch=$(top_patch)
fi

for patch in $(applied_before "$patch") $patch
do
	echo "$(print_patch $patch)"
done

### Local Variables:
### mode: shell-script
### End:
# vim:filetype=sh
