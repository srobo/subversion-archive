: ${EDITOR:=vi}

usage()
{
	printf $"Usage: quilt edit file ...\n"
	if [ x$1 = x-h ]
	then
		printf $"
Edit the specified file(s) in \$EDITOR (%s) after adding it (them) to
the topmost patch.
" "$EDITOR"
		exit 0
	else
		exit 1
	fi
}

options=`getopt -o h -- "$@"`

if [ $? -ne 0 ]
then
	usage
fi

eval set -- "$options"

while true
do
	case "$1" in
	-h)
		usage -h ;;
	--)
		shift
		break ;;
	esac
done

if [ $# -eq 0 ]
then
	usage
fi

bash -c ". $CMDPATH/add" "quilt add" "$@"
$EDITOR "$@"
status=$?
for file in "$@"
do
	if ! [ -e "$file" ]
	then
		bash -c ". $CMDPATH/remove" "quilt remove" "$file"
		status=1
	fi
done

exit $status
### Local Variables:
### mode: shell-script
### End:
# vim:filetype=sh
